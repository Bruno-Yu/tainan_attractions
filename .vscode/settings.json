{
  "editor.tabSize": 2,
  "files.eol": "\n",
  "editor.formatOnSave": true, // if you use ESlintï¼Œthis should be false
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss",
    "vue"
  ],
  "files.autoGuessEncoding": true
}